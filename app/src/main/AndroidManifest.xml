<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bugsnguns.asprokopov.tapattack">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name="com.bugsnguns.asprokopov.tapattack.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.bugsnguns.asprokopov.tapattack.ChooseTargetActivity"
            android:screenOrientation="portrait"/>

        <activity android:name="com.bugsnguns.asprokopov.tapattack.BattleActivity"
            android:screenOrientation="portrait"/>

        <activity android:name="com.bugsnguns.asprokopov.tapattack.WinnerActivity"
            android:screenOrientation="portrait"/>
    </application>

</manifest>